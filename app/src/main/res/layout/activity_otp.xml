<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF176"
    tools:context=".OtpActivity">

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="412dp"
      android:layout_marginTop="10dp"
      android:layout_height="94dp"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/meme1" />
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/meme2" />
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/meme3" />
  </LinearLayout>

  <TextView
      android:id="@+id/textView2"
      android:layout_width="278dp"
      android:layout_height="130dp"
      android:layout_marginBottom="452dp"
      android:fontFamily="cursive"
      android:gravity="center"
      android:text="Meme Central ðŸ˜‚"
      android:textColor="#070707"
      android:textColorLink="#F8F8F8"
      android:textSize="44sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="291dp"
      android:layout_height="47dp"
      android:layout_marginTop="262dp"
      android:layout_marginBottom="388dp"
      android:fontFamily="cursive"
      android:gravity="center"
      android:text="Verify Your OTP"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <EditText
      android:id="@+id/editTextPhone2"
      android:layout_width="262dp"
      android:layout_height="49dp"
      android:background="@color/white"
      android:ems="10"
      android:fontFamily="monospace"
      android:gravity="center|center_vertical"
      android:hint="Enter Your OTP"
      android:inputType="phone"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.51"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      app:layout_constraintVertical_bias="0.194" />

  <Button
      android:id="@+id/verify_btn"
      android:layout_width="259dp"
      android:layout_height="56dp"
      android:text="Verify OTP"
      android:textColor="@color/white"
      android:textStyle="bold"
      app:backgroundTint="#000000"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.519"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextPhone2"
      app:layout_constraintVertical_bias="0.299" />

  <TextView
      android:id="@+id/otp_form_feedback"
      android:layout_width="250dp"
      android:layout_height="37dp"
      android:layout_marginTop="32dp"
      android:fontFamily="monospace"
      android:foregroundGravity="center"
      android:gravity="center"
      android:text="Please Wait "

      android:textColor="@color/black"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/verify_btn" />

  <ProgressBar
      android:id="@+id/otp_progress_bar"
      style="?android:attr/progressBarStyle"
      android:layout_width="42dp"
      android:layout_height="25dp"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="@+id/verify_btn"
      app:layout_constraintEnd_toEndOf="@+id/verify_btn"
      app:layout_constraintStart_toStartOf="@+id/verify_btn"
      app:layout_constraintTop_toTopOf="@+id/verify_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>